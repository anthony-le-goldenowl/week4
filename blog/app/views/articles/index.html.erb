<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <hr>
        <%= link_to article.title, article %>
        <br>
        <%= link_to "See comment", article_comments_path(article) %>
        <hr>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
